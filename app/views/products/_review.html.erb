<div class="panel panel-default reviews">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><h4><%= review.user.name %></h4></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="rating-cell"><%= review.rating %> / 5</td>
        <td><%= review.description %></td>
        <% if current_user && review.user_id == current_user.id %>
          <td class="button-cell"><%= button_to "delete", review_path(review.id), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>