<section class="users-new">

  <header class="page-header">
    <h1>It's free to sign up!</h1>
  </header>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for @user, url: '/users' do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        Name: <%= form.text_field :name, class: 'form-control' %>
        Email: <%= form.text_field :email, class: 'form-control' %>
        Password: <%= form.password_field :password, class: 'form-control' %>
        Confirm password: <%= form.password_field :password_confirmation, class: 'form-control' %>
        <%= form.submit 'Sign Up', class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>

</section>