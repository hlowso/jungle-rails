<% if product = Product.find_by(id: product_id) %>
  <tr>
    <td>
      <%= image_tag product.img_url, size: '100x100' %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
    	<%= quantity %>
    </td>
    <td>
      <%= total %>
    </td>
  </tr>
<% end %>